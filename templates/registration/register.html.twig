{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {% for message in app.flashes('warning') %}
                    <div class="alert alert-warning">
                        {{ message }}
                    </div>
                {% endfor %}

                <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>

                {{ form_start(registrationForm) }}
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'inputEmail'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="form-group">
                        <label for="inputPassword">Password</label>
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'id': 'inputPassword'}}) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="form-check">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label">
                            {{ form_label(registrationForm.agreeTerms) }}
                        </label>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn btn-lg btn-gold text-blue fw-bold btn-block shadow mt-3">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}